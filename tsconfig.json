{
  // 引用其他TypeScript项目配置
  "references": [
    {
      // 引用应用主配置
      "path": "./tsconfig.app.json"
    },
    {
      // 引用Node环境配置
      "path": "./tsconfig.node.json"
    }
  ],

  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom"],
    "types": ["@dcloudio/types", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/main.js"]
}
