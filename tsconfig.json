{
  // 引用其他TypeScript项目配置
  "references": [
    {
      // 引用应用主配置
      "path": "./tsconfig.app.json"
    },
    {
      // 引用Node环境配置
      "path": "./tsconfig.node.json"
    }
  ],

  "compilerOptions": {
    "sourceMap": true, // 生成source map文件，用于调试
    "jsx": "preserve", // 保留JSX，不转换为函数调用
    "jsxImportSource": "vue", // 导入Vue的JSX模块
    "esModuleInterop": true, // 启用ES模块互操作性
    "resolveJsonModule": true, // 解析JSON模块，可import JSON文件
    "downlevelIteration": true, // 降级迭代器，支持旧版浏览器
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom"],
    "types": ["@dcloudio/types", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/main.ts"]
}
